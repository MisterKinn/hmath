}

QPushButton#upload-button {
    background-color: transparent;
    border: none;
    border-radius: 8px;
    padding: 0px;
    color: #e8e8e8;
    font-size: 18px;
    font-weight: 500;
    min-width: 44px;
    min-height: 44px;
    max-width: 44px;
    max-height: 44px;
}

QPushButton#upload-button:hover {
    background-color: #2a2a2a;
    border: none;
}

QPushButton#upload-button:pressed {
    background-color: #1a1a1a;
}

QPushButton#help-button {
    background-color: transparent;
    border: none;
    border-radius: 8px;
    padding: 0px 12px;
    color: #e8e8e8;
    font-size: 13px;
    font-weight: 500;
}
#success-indicator {
